<?xml version="1.0" encoding="utf-8"?>
<executable>
    <category>MIATT.HW03.abpwrs</category>
    <title>DOG</title>
    <description>
        Computes the Difference of Gaussians
    </description>
    <version>1.0</version>
    <documentation-url></documentation-url>
    <license></license>
    <contributor>Alexander B. Powers</contributor>

    <parameters>
        <label>
            Difference of Gaussians Parameters
        </label>
        <description>
            Parameters for Difference of Gaussians
            Result = Gaussian(img, SigmaOne) - Gaussian(img, SigmaTwo)
        </description>

        <double>
            <name>sigmaOne</name>
            <longflag>sigmaOne</longflag>
            <description>Sigma One</description>
            <label>Sigma One</label>
            <default>5</default>
            <constraints>
                <minimum>.1</minimum>
                <maximum>50</maximum>
                <step>.1</step>
            </constraints>
        </double>
        <double>
            <name>sigmaTwo</name>
            <longflag>sigmaTwo</longflag>
            <description>Sigma Two</description>
            <label>Sigma Two</label>
            <default>1</default>
            <constraints>
                <minimum>.1</minimum>
                <maximum>50</maximum>
                <step>.1</step>
            </constraints>
        </double>
    </parameters>

    <parameters>
        <label>IO</label>
        <description>Input/Output parameters</description>
        <image>
            <name>inputVolume</name>
            <label>Input Volume</label>
            <channel>input</channel>
            <index>0</index>
            <description>Input volume to be filtered</description>
        </image>
        <image>
            <name>outputVolume</name>
            <label>Output Volume</label>
            <channel>output</channel>
            <index>1</index>
            <description>Output filtered</description>
        </image>
    </parameters>

</executable>